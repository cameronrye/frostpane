{
  "name": "@frostpane/core",
  "version": "1.0.0",
  "description": "A customizable frosted glass effect CSS library with backdrop blur and modern aesthetics",
  "main": "dist/frostpane.css",
  "types": "src/frostpane.d.ts",
  "style": "dist/frostpane.css",
  "sass": "src/frostpane.scss",
  "exports": {
    ".": {
      "types": "./src/frostpane.d.ts",
      "sass": "./src/frostpane.scss",
      "style": "./dist/frostpane.css",
      "default": "./dist/frostpane.css"
    },
    "./scss": {
      "types": "./src/frostpane.d.ts",
      "default": "./src/frostpane.scss"
    },
    "./css": {
      "types": "./src/frostpane.d.ts",
      "default": "./dist/frostpane.css"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "sass src/frostpane.scss dist/frostpane.css --style=compressed",
    "build:dev": "sass src/frostpane.scss dist/frostpane.css",
    "watch": "sass src/frostpane.scss dist/frostpane.css --watch",
    "lint": "stylelint \"src/**/*.scss\"",
    "lint:fix": "stylelint \"src/**/*.scss\" --fix",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "css",
    "scss",
    "sass",
    "glass",
    "frosted-glass",
    "frostpane",
    "glass-effect",
    "glassmorphism",
    "ui",
    "design",
    "design-system",
    "backdrop-filter",
    "blur",
    "ui-components",
    "css-library"
  ],
  "author": "Cameron Rye <c@meron.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cameronrye/frostpane.git",
    "directory": "packages/frostpane"
  },
  "bugs": {
    "url": "https://github.com/cameronrye/frostpane/issues"
  },
  "homepage": "https://cameronrye.github.io/frostpane",
  "devDependencies": {
    "sass": "^1.93.3"
  }
}
