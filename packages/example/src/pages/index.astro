  <script>
    import {
      downloadFrostpaneCSS,
      downloadStarterTemplate,
      copyToClipboard,
    } from '../utils/downloadUtils';

    // Download and copy functionality
    document.addEventListener('DOMContentLoaded', () => {
      // Download CSS button
      const downloadCssBtn = document.querySelector('.download-css-btn');
      downloadCssBtn?.addEventListener('click', () => {
        downloadFrostpaneCSS();
      });

      // Download template button
      const downloadTemplateBtn = document.querySelector('.download-template-btn');
      downloadTemplateBtn?.addEventListener('click', () => {
        downloadStarterTemplate();
      });

      // Copy install command buttons
      const copyButtons = document.querySelectorAll('.copy-install-btn');
      copyButtons.forEach((button) => {
        button.addEventListener('click', async (e) => {
          const btn = e.currentTarget as HTMLElement;
          const command = btn.dataset.command;
          if (command) {
            const success = await copyToClipboard(command);
            if (success) {
              const originalText = btn.innerHTML;
              btn.innerHTML = '<i class="fa-solid fa-check" aria-hidden="true"></i> Copied!';
              setTimeout(() => {
                btn.innerHTML = originalText;
              }, 2000);
            }
          }
        });
      });
    });

    // Modal functionality
    const modalTrigger = document.querySelector('.demo-modal-trigger');
    const modal = document.getElementById('demo-modal');
    const modalBackdrop = modal?.querySelector('.glass-modal__backdrop');
    const modalClose = modal?.querySelector('.glass-modal__close');
    const modalCancelBtn = modal?.querySelector('.glass-btn--secondary');

    function openModal() {
      modal?.classList.add('glass-modal--active');
      document.body.style.overflow = 'hidden';
    }

    function closeModal() {
      modal?.classList.remove('glass-modal--active');
      document.body.style.overflow = '';
    }

    modalTrigger?.addEventListener('click', openModal);
    modalBackdrop?.addEventListener('click', closeModal);
    modalClose?.addEventListener('click', closeModal);
    modalCancelBtn?.addEventListener('click', closeModal);

    // Close modal on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal?.classList.contains('glass-modal--active')) {
        closeModal();
      }
    });

    // Toast notification functionality
    const toastContainer = document.getElementById('toast-container');
    const toastButtons = {
      success: document.querySelector('.demo-toast-success'),
      error: document.querySelector('.demo-toast-error'),
      warning: document.querySelector('.demo-toast-warning'),
      info: document.querySelector('.demo-toast-info'),
    };

    const toastConfig = {
      success: {
        message: 'Operation completed successfully!',
        icon: 'fa-check-circle',
      },
      error: {
        message: 'An error occurred. Please try again.',
        icon: 'fa-times-circle',
      },
      warning: {
        message: 'Please review your input.',
        icon: 'fa-exclamation-triangle',
      },
      info: {
        message: 'Here is some useful information.',
        icon: 'fa-info-circle',
      },
    };

    function showToast(type: 'success' | 'error' | 'warning' | 'info') {
      const config = toastConfig[type];
      const toast = document.createElement('div');
      toast.className = `glass-toast glass-toast--${type}`;
      toast.innerHTML = `
      <i class="fa-solid ${config.icon} glass-toast__icon" aria-hidden="true"></i>
      <span class="glass-toast__message">${config.message}</span>
      <button class="glass-toast__close" aria-label="Close notification">
        <i class="fa-solid fa-xmark" aria-hidden="true"></i>
      </button>
    `;

      const closeBtn = toast.querySelector('.glass-toast__close');
      closeBtn?.addEventListener('click', () => toast.remove());

      toastContainer?.appendChild(toast);

      setTimeout(() => toast.classList.add('glass-toast--show'), 10);
      setTimeout(() => {
        toast.classList.remove('glass-toast--show');
        setTimeout(() => toast.remove(), 300);
      }, 3000);
    }

    // Add event listeners to toast buttons
    Object.entries(toastButtons).forEach(([type, button]) => {
      button?.addEventListener('click', () =>
        showToast(type as 'success' | 'error' | 'warning' | 'info')
      );
    });

    // Scroll to top button functionality
    const scrollToTopBtn = document.getElementById('scroll-to-top');
    const scrollProgress = document.getElementById('scroll-progress');

    function updateScrollElements() {
      const scrollTop = window.scrollY;
      const docHeight = document.documentElement.scrollHeight - window.innerHeight;
      const scrollPercent = (scrollTop / docHeight) * 100;

      // Update scroll progress bar
      if (scrollProgress) {
        scrollProgress.style.width = `${scrollPercent}%`;
      }

      // Show/hide scroll to top button
      if (scrollToTopBtn) {
        if (scrollTop > 300) {
          scrollToTopBtn.classList.add('visible');
        } else {
          scrollToTopBtn.classList.remove('visible');
        }
      }
    }

    // Scroll to top on button click
    scrollToTopBtn?.addEventListener('click', () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth',
      });
    });

    // Update on scroll
    window.addEventListener('scroll', updateScrollElements);
    // Initial update
    updateScrollElements();

    // Tabs functionality
    const tabsContainer = document.getElementById('demo-tabs');
    const tabs = tabsContainer?.querySelectorAll('.glass-tabs__tab');

    tabs?.forEach((tab) => {
      tab.addEventListener('click', () => {
        const tabId = (tab as HTMLElement).dataset.tab;

        // Remove active class from all tabs and panels
        tabsContainer?.querySelectorAll('.glass-tabs__tab').forEach((t) => {
          t.classList.remove('glass-tabs__tab--active');
        });
        tabsContainer?.querySelectorAll('.glass-tabs__panel').forEach((p) => {
          p.classList.remove('glass-tabs__panel--active');
        });

        // Add active class to clicked tab and corresponding panel
        tab.classList.add('glass-tabs__tab--active');
        const panel = tabsContainer?.querySelector(`.glass-tabs__panel[data-panel="${tabId}"]`);
        panel?.classList.add('glass-tabs__panel--active');
      });
    });

    // Playground functionality
    const playgroundPreview = document.getElementById('playground-preview');
    const presetButtons = document.querySelectorAll('.preset-btn');
    const rangeInputs = document.querySelectorAll('input[type="range"][data-css-var]');
    const colorInputs = document.querySelectorAll('input[type="color"][data-css-var]');
    const copyCssBtn = document.getElementById('copy-css-btn');
    const resetBtn = document.getElementById('reset-btn');

    // Store default values
    const defaultValues: Record<string, string> = {};
    rangeInputs.forEach((input) => {
      const cssVar = (input as HTMLInputElement).dataset.cssVar;
      if (cssVar) {
        defaultValues[cssVar] = (input as HTMLInputElement).value;
      }
    });
    colorInputs.forEach((input) => {
      const cssVar = (input as HTMLInputElement).dataset.cssVar;
      if (cssVar) {
        defaultValues[cssVar] = (input as HTMLInputElement).value;
      }
    });

    // Update CSS variable
    function updateCSSVariable(cssVar: string, value: string, unit: string = '') {
      playgroundPreview?.style.setProperty(cssVar, value + unit);
    }

    // Update range value display
    function updateRangeDisplay(input: HTMLInputElement) {
      const cssVar = input.dataset.cssVar;
      const unit = input.dataset.unit || '';
      const valueDisplay = document.querySelector(`[data-value-for="${cssVar}"]`);
      if (valueDisplay) {
        valueDisplay.textContent = input.value + unit;
      }
    }

    // Range input listeners
    rangeInputs.forEach((input) => {
      input.addEventListener('input', () => {
        const htmlInput = input as HTMLInputElement;
        const cssVar = htmlInput.dataset.cssVar;
        const unit = htmlInput.dataset.unit || '';
        if (cssVar) {
          updateCSSVariable(cssVar, htmlInput.value, unit);
          updateRangeDisplay(htmlInput);
        }
      });
    });

    // Color input listeners
    colorInputs.forEach((input) => {
      input.addEventListener('input', () => {
        const htmlInput = input as HTMLInputElement;
        const cssVar = htmlInput.dataset.cssVar;
        if (cssVar) {
          updateCSSVariable(cssVar, htmlInput.value);
        }
      });
    });

    // Preset button listeners
    presetButtons.forEach((button) => {
      button.addEventListener('click', () => {
        const presetName = (button as HTMLElement).dataset.preset;

        // Remove active class from all presets
        presetButtons.forEach((btn) => btn.classList.remove('active'));
        button.classList.add('active');

        // Apply preset values (you would need to import the preset data)
        // For now, we'll just reset to defaults
        if (presetName === 'Default') {
          resetToDefaults();
        }
      });
    });

    // Reset to defaults
    function resetToDefaults() {
      rangeInputs.forEach((input) => {
        const htmlInput = input as HTMLInputElement;
        const cssVar = htmlInput.dataset.cssVar;
        if (cssVar && defaultValues[cssVar]) {
          htmlInput.value = defaultValues[cssVar];
          const unit = htmlInput.dataset.unit || '';
          updateCSSVariable(cssVar, htmlInput.value, unit);
          updateRangeDisplay(htmlInput);
        }
      });

      colorInputs.forEach((input) => {
        const htmlInput = input as HTMLInputElement;
        const cssVar = htmlInput.dataset.cssVar;
        if (cssVar && defaultValues[cssVar]) {
          htmlInput.value = defaultValues[cssVar];
          updateCSSVariable(cssVar, htmlInput.value);
        }
      });

      // Remove active class from all presets
      presetButtons.forEach((btn) => btn.classList.remove('active'));
      // Add active to Default preset
      const defaultBtn = document.querySelector('[data-preset="Default"]');
      defaultBtn?.classList.add('active');
    }

    // Reset button listener
    resetBtn?.addEventListener('click', resetToDefaults);

    // Copy CSS button listener
    copyCssBtn?.addEventListener('click', async () => {
      const cssText = Array.from(rangeInputs)
        .map((input) => {
          const htmlInput = input as HTMLInputElement;
          const cssVar = htmlInput.dataset.cssVar;
          const unit = htmlInput.dataset.unit || '';
          return `  ${cssVar}: ${htmlInput.value}${unit};`;
        })
        .concat(
          Array.from(colorInputs).map((input) => {
            const htmlInput = input as HTMLInputElement;
            const cssVar = htmlInput.dataset.cssVar;
            return `  ${cssVar}: ${htmlInput.value};`;
          })
        )
        .join('\n');

      const fullCss = `:root {\n${cssText}\n}`;

      try {
        await navigator.clipboard.writeText(fullCss);
        const originalText = copyCssBtn.innerHTML;
        copyCssBtn.innerHTML = '<i class="fa-solid fa-check"></i> Copied!';
        setTimeout(() => {
          copyCssBtn.innerHTML = originalText;
        }, 2000);
      } catch (err) {
        console.error('Failed to copy CSS:', err);
      }
    });

    // Initialize with defaults
    resetToDefaults();

    // ========================================================================
    // API Documentation Search and Filter
    // ========================================================================

    const apiSearchInput = document.getElementById('api-search') as HTMLInputElement;
    const apiSearchClear = document.getElementById('api-search-clear') as HTMLButtonElement;
    const apiFilterBtns = document.querySelectorAll('.api-filter-btn');
    const apiVariableCards = document.querySelectorAll('.api-variable-card');
    const apiCategorySections = document.querySelectorAll('.api-category-section');
    const apiNoResults = document.getElementById('api-no-results');

    let currentFilter = 'all';
    let currentSearch = '';

    function filterApiVariables() {
      let visibleCount = 0;
      const categoryCounts = new Map<string, number>();

      apiVariableCards.forEach((card) => {
        const htmlCard = card as HTMLElement;
        const category = htmlCard.dataset.category || '';
        const searchText = htmlCard.dataset.searchText || '';

        // Check if card matches current filter
        const matchesFilter = currentFilter === 'all' || category === currentFilter;

        // Check if card matches current search
        const matchesSearch =
          currentSearch === '' || searchText.toLowerCase().includes(currentSearch.toLowerCase());

        // Show or hide card
        const isVisible = matchesFilter && matchesSearch;
        htmlCard.style.display = isVisible ? '' : 'none';

        if (isVisible) {
          visibleCount++;
          categoryCounts.set(category, (categoryCounts.get(category) || 0) + 1);
        }
      });

      // Show/hide category sections based on visible cards
      apiCategorySections.forEach((section) => {
        const htmlSection = section as HTMLElement;
        const category = htmlSection.dataset.category || '';
        const count = categoryCounts.get(category) || 0;

        if (currentFilter === 'all') {
          htmlSection.style.display = count > 0 ? '' : 'none';
        } else {
          htmlSection.style.display = category === currentFilter && count > 0 ? '' : 'none';
        }
      });

      // Show/hide no results message
      if (apiNoResults) {
        apiNoResults.style.display = visibleCount === 0 ? 'flex' : 'none';
      }

      // Show/hide clear button
      if (apiSearchClear) {
        apiSearchClear.style.display = currentSearch ? 'flex' : 'none';
      }
    }

    // Search input listener
    if (apiSearchInput) {
      apiSearchInput.addEventListener('input', (e) => {
        currentSearch = (e.target as HTMLInputElement).value;
        filterApiVariables();
      });
    }

    // Clear search button
    if (apiSearchClear) {
      apiSearchClear.addEventListener('click', () => {
        if (apiSearchInput) {
          apiSearchInput.value = '';
          currentSearch = '';
          filterApiVariables();
          apiSearchInput.focus();
        }
      });
    }

    // Filter button listeners
    apiFilterBtns.forEach((btn) => {
      btn.addEventListener('click', () => {
        const htmlBtn = btn as HTMLElement;
        const category = htmlBtn.dataset.category || 'all';

        // Update active state
        apiFilterBtns.forEach((b) => b.classList.remove('active'));
        btn.classList.add('active');

        // Update filter
        currentFilter = category;
        filterApiVariables();
      });
    });

    // Initialize API filters
    filterApiVariables();

    // ===== SEARCH & FILTER FUNCTIONALITY =====
    function initializeSearchFilter(targetSection: string) {
      const searchFilter = document.querySelector(`.search-filter[data-target="${targetSection}"]`);
      if (!searchFilter) return;

      const searchInput = searchFilter.querySelector('.search-filter__input') as HTMLInputElement;
      const clearBtn = searchFilter.querySelector('.search-filter__clear') as HTMLButtonElement;
      const categorySelect = searchFilter.querySelector(
        '.search-filter__category .search-filter__select'
      ) as HTMLSelectElement;
      const sortSelect = searchFilter.querySelector(
        '.search-filter__sort .search-filter__select'
      ) as HTMLSelectElement;
      const resultsCount = searchFilter.querySelector('.search-filter__count') as HTMLElement;

      const grid = document.getElementById(`${targetSection}-grid`) as HTMLElement;
      const noResults = document.getElementById(`${targetSection}-no-results`) as HTMLElement;

      if (!searchInput || !grid) return;

      let currentSearch = '';
      let currentCategory = '';
      let currentSort = 'default';

      function filterItems() {
        const items =
          targetSection === 'examples'
            ? grid.querySelectorAll('.example-item-wrapper')
            : targetSection === 'use-cases'
              ? grid.querySelectorAll('.use-case-item')
              : targetSection === 'tutorials'
                ? grid.querySelectorAll('.tutorial-item')
                : grid.querySelectorAll('.component-item');

        let visibleCount = 0;
        const itemsArray = Array.from(items);

        // Filter items
        itemsArray.forEach((item) => {
          const htmlItem = item as HTMLElement;
          const title = htmlItem.dataset.title || '';
          const description = htmlItem.dataset.description || '';
          const category = htmlItem.dataset.category || '';
          const tags = htmlItem.dataset.tags || '';

          // Check search match
          const searchMatch =
            !currentSearch ||
            title.includes(currentSearch.toLowerCase()) ||
            description.includes(currentSearch.toLowerCase()) ||
            tags.includes(currentSearch.toLowerCase());

          // Check category match
          const categoryMatch = !currentCategory || category === currentCategory.toLowerCase();

          // Show/hide item
          if (searchMatch && categoryMatch) {
            htmlItem.style.display = '';
            visibleCount++;
          } else {
            htmlItem.style.display = 'none';
          }
        });

        // Sort items
        if (currentSort !== 'default') {
          const sortedItems = itemsArray.sort((a, b) => {
            const aTitle = (a as HTMLElement).dataset.title || '';
            const bTitle = (b as HTMLElement).dataset.title || '';

            if (currentSort === 'name-asc') {
              return aTitle.localeCompare(bTitle);
            } else if (currentSort === 'name-desc') {
              return bTitle.localeCompare(aTitle);
            }
            return 0;
          });

          sortedItems.forEach((item) => grid.appendChild(item));
        }

        // Update results count
        if (resultsCount) {
          resultsCount.textContent = `Showing ${visibleCount} of ${items.length} ${targetSection}`;
        }

        // Show/hide no results message
        if (noResults) {
          noResults.style.display = visibleCount === 0 ? 'flex' : 'none';
        }

        // Show/hide clear button
        if (clearBtn) {
          clearBtn.style.display = currentSearch ? 'block' : 'none';
        }
      }

      // Search input listener
      if (searchInput) {
        searchInput.addEventListener('input', (e) => {
          currentSearch = (e.target as HTMLInputElement).value;
          filterItems();
        });
      }

      // Clear button listener
      if (clearBtn) {
        clearBtn.addEventListener('click', () => {
          searchInput.value = '';
          currentSearch = '';
          filterItems();
          searchInput.focus();
        });
      }

      // Category select listener
      if (categorySelect) {
        categorySelect.addEventListener('change', (e) => {
          currentCategory = (e.target as HTMLSelectElement).value;
          filterItems();
        });
      }

      // Sort select listener
      if (sortSelect) {
        sortSelect.addEventListener('change', (e) => {
          currentSort = (e.target as HTMLSelectElement).value;
          filterItems();
        });
      }

      // Initialize
      filterItems();
    }

    // Initialize search filters for all sections
    initializeSearchFilter('examples');
    initializeSearchFilter('components');
    initializeSearchFilter('use-cases');
    initializeSearchFilter('tutorials');

    // Viewport Toggle Functionality
    function initializeViewportToggle(targetSection: string) {
      const toggle = document.querySelector(
        `.viewport-toggle[data-target="${targetSection}"]`
      ) as HTMLElement;
      if (!toggle) return;

      const buttons = toggle.querySelectorAll('.viewport-toggle__button');
      const sizeLabel = toggle.querySelector('.viewport-toggle__size') as HTMLElement;
      const grid = document.getElementById(`${targetSection}-grid`) as HTMLElement;

      if (!buttons.length || !sizeLabel || !grid) return;

      const viewportSizes = {
        desktop: { width: '100%', label: 'Desktop (1200px)' },
        tablet: { width: '768px', label: 'Tablet (768px)' },
        mobile: { width: '375px', label: 'Mobile (375px)' },
      };

      buttons.forEach((button) => {
        button.addEventListener('click', () => {
          const viewport = button.getAttribute('data-viewport') as keyof typeof viewportSizes;
          if (!viewport) return;

          // Update active button
          buttons.forEach((btn) => btn.classList.remove('viewport-toggle__button--active'));
          button.classList.add('viewport-toggle__button--active');

          // Update size label
          sizeLabel.textContent = viewportSizes[viewport].label;

          // Update grid width
          const gridWidth = viewportSizes[viewport].width;
          if (gridWidth === '100%') {
            grid.style.maxWidth = '';
            grid.style.margin = '';
            grid.style.transition = '';
          } else {
            grid.style.maxWidth = gridWidth;
            grid.style.margin = '0 auto';
            grid.style.transition = 'max-width 0.3s var(--fp-ease-smooth)';
          }
        });
      });
    }

    // Initialize viewport toggles for all sections
    initializeViewportToggle('examples');
    initializeViewportToggle('components');
    initializeViewportToggle('use-cases');

    // Tutorial Toggle Functionality
    document.querySelectorAll('.tutorial-item').forEach((tutorialItem) => {
      const toggleBtn = tutorialItem.querySelector('.tutorial-item__toggle') as HTMLButtonElement;
      const content = tutorialItem.querySelector('.tutorial-item__content') as HTMLElement;

      if (toggleBtn && content) {
        toggleBtn.addEventListener('click', () => {
          const isOpen = content.style.display !== 'none';

          if (isOpen) {
            content.style.display = 'none';
            toggleBtn.classList.remove('active');
          } else {
            content.style.display = 'block';
            toggleBtn.classList.add('active');
          }
        });
      }
    });
  </script>
