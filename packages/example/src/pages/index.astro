---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import ExampleItem from '../components/ExampleItem.astro';
import ComponentItem from '../components/ComponentItem.astro';
import UseCaseItem from '../components/UseCaseItem.astro';
import TutorialItem from '../components/TutorialItem.astro';
import BrowserCard from '../components/BrowserCard.astro';
import CompatibilityNote from '../components/CompatibilityNote.astro';
import FAQItem from '../components/FAQItem.astro';
import CodeBlock from '../components/CodeBlock.astro';
import AccessibilityCard from '../components/AccessibilityCard.astro';
import ApiVariableCard from '../components/ApiVariableCard.astro';
import BackgroundSwitcher from '../components/BackgroundSwitcher.astro';
import IntegrationCard from '../components/IntegrationCard.astro';
import SearchFilter from '../components/SearchFilter.astro';
import ViewportToggle from '../components/ViewportToggle.astro';
import PerformanceMetricCard from '../components/PerformanceMetricCard.astro';
import PerformanceTipCard from '../components/PerformanceTipCard.astro';
import BestPracticeCard from '../components/BestPracticeCard.astro';
import TroubleshootingCard from '../components/TroubleshootingCard.astro';
import ResourceCard from '../components/ResourceCard.astro';
import ChangelogEntry from '../components/ChangelogEntry.astro';
import { examples } from '../data/examples';
import { components } from '../data/components';
import { useCases } from '../data/useCases';
import { tutorials } from '../data/tutorials';
import { browsers, compatibilityNotes, fallbackExample } from '../data/browserSupport';
import { faqItems } from '../data/faq';
import { accessibilityFeatures, accessibilityCodeExample } from '../data/accessibility';
import { playgroundVariables, playgroundPresets } from '../data/playground';
import { apiCategories, apiVariables } from '../data/apiDocs';
import { integrations } from '../data/integrations';
import { performanceMetrics, performanceTips, benchmarkData } from '../data/performance';
import { bestPractices, designGuidelines } from '../data/bestPractices';
import { troubleshootingIssues, debuggingTips } from '../data/troubleshooting';
import { resources, relatedLibraries, communityLinks } from '../data/resources';
import { changelog, upcomingFeatures } from '../data/changelog';

// Get unique categories for filtering
const exampleCategories = [...new Set(examples.map((ex) => ex.category))].sort();
const componentCategories = [...new Set(components.map((comp) => comp.category))].sort();
const useCaseCategories = [...new Set(useCases.map((uc) => uc.category))].sort();
const tutorialCategories = [...new Set(tutorials.map((tut) => tut.category))].sort();
---

<Layout title="Frostpane - Customizable Frosted Glass Effect Library">
  <Navigation />
  <BackgroundSwitcher />

  <main>
    <!-- HOME SECTION -->
    <section id="home" class="section active">
      <div class="section-header">
        <img src={`${import.meta.env.BASE_URL}/logo.svg`} alt="Frostpane Logo" class="logo-img" />
        <h2 class="tagline">Beautiful frosted glass effects for modern web interfaces</h2>
        <p class="description">
          Create stunning glassmorphic UI components with customizable blur, transparency, and
          shadows. Built with pure CSS, fully responsive, and ready to use in any project.
        </p>
      </div>

      <div class="demo-showcase">
        <!-- Feature Highlights -->
        <div class="feature-cards">
          <div class="glass-container glass-container--rounded glass-container--medium">
            <div class="glass-content glass-content--column">
              <i class="fa-solid fa-wand-magic-sparkles feature-icon" aria-hidden="true"></i>
              <h3 class="feature-title">Easy to Customize</h3>
              <p class="feature-description">
                Fine-tune every aspect using CSS variables. Adjust blur intensity, colors, shadows,
                and more.
              </p>
            </div>
          </div>

          <div class="glass-container glass-container--rounded glass-container--medium">
            <div class="glass-content glass-content--column">
              <i class="fa-solid fa-mobile-screen-button feature-icon" aria-hidden="true"></i>
              <h3 class="feature-title">Fully Responsive</h3>
              <p class="feature-description">
                Works seamlessly across all devices and screen sizes with built-in responsive
                utilities.
              </p>
            </div>
          </div>

          <div class="glass-container glass-container--rounded glass-container--medium">
            <div class="glass-content glass-content--column">
              <i class="fa-solid fa-bolt feature-icon" aria-hidden="true"></i>
              <h3 class="feature-title">Performance First</h3>
              <p class="feature-description">
                Optimized for smooth animations and GPU-accelerated effects without compromising
                speed.
              </p>
            </div>
          </div>
        </div>

        <!-- Interactive Demo Components -->
        <div class="demo-components">
          <h3 class="demo-section-title">Interactive Components</h3>
          <p class="demo-section-subtitle">
            See Frostpane in action with these interactive examples
          </p>

          <div class="demo-grid">
            <!-- Music Player Demo -->
            <div class="demo-item">
              <div class="demo-item-label">Music Player Widget</div>
              <div class="glass-container glass-container--rounded glass-container--large">
                <div class="glass-content">
                  <div class="player">
                    <div class="player__thumb">
                      <div
                        class="player__img"
                        role="img"
                        aria-label="Album cover for Midnight Dreams"
                      >
                      </div>
                      <div class="player__legend">
                        <h3 class="player__legend-title">Midnight Dreams</h3>
                        <span class="player__legend-sub-title">Luna & The Echoes</span>
                      </div>
                    </div>
                    <div class="player__controls">
                      <i class="fa-solid fa-backward-step" aria-label="Previous track"></i>
                      <i class="fa-solid fa-play" aria-label="Play"></i>
                      <i class="fa-solid fa-forward-step" aria-label="Next track"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Navigation Bar Demo -->
            <div class="demo-item">
              <div class="demo-item-label">Navigation Bar</div>
              <div class="glass-container glass-container--rounded glass-container--medium">
                <div class="glass-content">
                  <div class="glass-item glass-item--active">
                    <i class="fa-solid fa-house" aria-label="Home"></i>
                    Home
                  </div>
                  <div class="glass-item">
                    <i class="fa-solid fa-compass" aria-label="Explore"></i>
                    Explore
                  </div>
                  <div class="glass-item">
                    <i class="fa-solid fa-heart" aria-label="Favorites"></i>
                    Favorites
                  </div>
                  <div class="glass-item">
                    <i class="fa-solid fa-user" aria-label="Profile"></i>
                    Profile
                  </div>
                </div>
              </div>
            </div>

            <!-- Action Buttons Demo -->
            <div class="demo-item demo-item--full">
              <div class="demo-item-label">Action Buttons</div>
              <div class="action-buttons-showcase">
                <div class="glass-container glass-container--rounded glass-container--small">
                  <div class="glass-content">
                    <i class="fa-solid fa-magnifying-glass" aria-label="Search"></i>
                    Search
                  </div>
                </div>

                <div class="glass-container glass-container--rounded glass-container--small">
                  <div class="glass-content">
                    <i class="fa-solid fa-bell" aria-label="Notifications"></i>
                    Notifications
                  </div>
                </div>

                <div class="glass-container glass-container--rounded glass-container--small">
                  <div class="glass-content">
                    <i class="fa-solid fa-gear" aria-label="Settings"></i>
                    Settings
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- GETTING STARTED SECTION -->
    <section id="getting-started" class="section">
      <div class="section-header">
        <h1>Getting Started</h1>
        <p>Quick guide to using Frostpane</p>
      </div>

      <div class="glass-container glass-container--rounded" style="margin-bottom: 2rem;">
        <div class="glass-content glass-content--column">
          <h2>Quick Start Options</h2>
          <div class="quick-start-options">
            <div class="quick-start-option">
              <h3>
                <i class="fa-brands fa-npm" aria-hidden="true"></i>
                Install via npm
              </h3>
              <div class="install-command">
                <code>npm install frostpane</code>
                <button
                  class="glass-btn glass-btn--small copy-install-btn"
                  data-command="npm install frostpane"
                  aria-label="Copy npm install command"
                >
                  <i class="fa-solid fa-copy" aria-hidden="true"></i>
                  Copy
                </button>
              </div>
            </div>

            <div class="quick-start-option">
              <h3>
                <i class="fa-solid fa-link" aria-hidden="true"></i>
                Use CDN
              </h3>
              <div class="install-command">
                <code>https://cdn.jsdelivr.net/npm/frostpane@latest/dist/frostpane.css</code>
                <button
                  class="glass-btn glass-btn--small copy-install-btn"
                  data-command='<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/frostpane@latest/dist/frostpane.css">'
                  aria-label="Copy CDN link"
                >
                  <i class="fa-solid fa-copy" aria-hidden="true"></i>
                  Copy
                </button>
              </div>
            </div>

            <div class="quick-start-option">
              <h3>
                <i class="fa-solid fa-download" aria-hidden="true"></i>
                Download Files
              </h3>
              <div class="download-buttons">
                <button
                  class="glass-btn glass-btn--primary download-css-btn"
                  aria-label="Download CSS file"
                >
                  <i class="fa-solid fa-file-code" aria-hidden="true"></i>
                  Download CSS
                </button>
                <button
                  class="glass-btn glass-btn--secondary download-template-btn"
                  aria-label="Download starter template"
                >
                  <i class="fa-solid fa-file-code" aria-hidden="true"></i>
                  Starter Template
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="getting-started">
        <div class="step">
          <h3>1. Installation</h3>
          <p>Install Frostpane via npm:</p>
          <div class="example-code">
            <pre><code>npm install @frostpane/core</code></pre>
          </div>
        </div>

        <div class="step">
          <h3>2. Import the CSS</h3>
          <p>Add Frostpane to your project:</p>
          <div class="example-code">
            <pre><code>&lt;link rel="stylesheet" href="node_modules/@frostpane/core/dist/frostpane.css"&gt;</code></pre>
          </div>
        </div>

        <div class="step">
          <h3>3. Use the Components</h3>
          <p>Start building with glass containers:</p>
          <div class="example-code">
            <pre><code>&lt;div class="glass-container glass-container--rounded"&gt;
  &lt;div class="glass-content"&gt;
    Your content here
  &lt;/div&gt;
&lt;/div&gt;</code></pre>
          </div>
        </div>

        <div class="step">
          <h3>4. Customize with CSS Variables</h3>
          <p>Override default styles using CSS custom properties:</p>
          <div class="example-code">
            <pre><code set:html={`.my-glass {
  --fp-bg-color: rgba(0, 0, 0, 0.4);
  --fp-backdrop-blur: 12px;
  --fp-border-radius: 1rem;
}`} /></pre>
          </div>
        </div>
      </div>
    </section>

    <!-- PLAYGROUND SECTION -->
    <section id="playground" class="section">
      <div class="section-header">
        <h1>Interactive Playground</h1>
        <p>Customize CSS variables in real-time and see the results instantly</p>
      </div>

      <div class="playground-container">
        <!-- Presets -->
        <div class="playground-presets">
          <h3>Presets</h3>
          <div class="preset-buttons">
            {
              playgroundPresets.map((preset) => (
                <button class="preset-btn" data-preset={preset.name}>
                  <strong>{preset.name}</strong>
                  <span>{preset.description}</span>
                </button>
              ))
            }
          </div>
        </div>

        <!-- Controls -->
        <div class="playground-controls">
          <h3>Customize Variables</h3>

          {
            ['colors', 'glass', 'transitions'].map((category) => (
              <div class="control-category">
                <h4 class="category-title">
                  {category.charAt(0).toUpperCase() + category.slice(1)}
                </h4>
                <div class="controls-grid">
                  {playgroundVariables
                    .filter((v) => v.category === category)
                    .map((variable) => (
                      <div class="control-item">
                        <label for={variable.cssVar}>{variable.name}</label>
                        {variable.type === 'range' ? (
                          <div class="range-control">
                            <input
                              type="range"
                              id={variable.cssVar}
                              data-css-var={variable.cssVar}
                              data-unit={variable.unit}
                              min={variable.min}
                              max={variable.max}
                              step={variable.step}
                              value={variable.defaultValue}
                            />
                            <span class="range-value" data-value-for={variable.cssVar}>
                              {variable.defaultValue}
                              {variable.unit}
                            </span>
                          </div>
                        ) : variable.type === 'color' ? (
                          <input
                            type="color"
                            id={variable.cssVar}
                            data-css-var={variable.cssVar}
                            value={
                              variable.defaultValue.startsWith('#')
                                ? variable.defaultValue
                                : '#ffffff'
                            }
                            class="color-input"
                          />
                        ) : null}
                      </div>
                    ))}
                </div>
              </div>
            ))
          }

          <div class="playground-actions">
            <button id="copy-css-btn">
              <i class="fa-solid fa-copy" aria-hidden="true"></i>
              Copy CSS
            </button>
            <button id="reset-btn">
              <i class="fa-solid fa-rotate-left" aria-hidden="true"></i>
              Reset to Default
            </button>
          </div>
        </div>

        <!-- Preview -->
        <div class="playground-preview">
          <h3>Live Preview</h3>
          <div class="preview-container" id="playground-preview">
            <div class="glass-container glass-container--rounded">
              <div class="glass-content">
                <i class="fa-solid fa-wand-magic-sparkles" aria-hidden="true"></i>
                <div>
                  <h4>Glass Effect</h4>
                  <p>Customize the variables to see changes in real-time</p>
                </div>
              </div>
            </div>

            <button class="glass-button">
              <i class="fa-solid fa-heart" aria-hidden="true"></i>
              Button Example
            </button>

            <div class="glass-card-preview">
              <h4>Card Title</h4>
              <p>
                This is a preview card showing how your customizations affect different components.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- API DOCUMENTATION SECTION -->
    <section id="api" class="section">
      <div class="section-header">
        <h1>API Documentation</h1>
        <p>Complete reference of all CSS custom properties</p>
      </div>

      <!-- Search Bar -->
      <div class="api-search-container">
        <div class="api-search-wrapper">
          <i class="fa-solid fa-search api-search-icon" aria-hidden="true"></i>
          <input
            type="text"
            id="api-search"
            class="api-search-input"
            placeholder="Search variables by name, CSS variable, or description..."
            aria-label="Search API variables"
          />
          <button id="api-search-clear" class="api-search-clear" aria-label="Clear search">
            <i class="fa-solid fa-times" aria-hidden="true"></i>
          </button>
        </div>
      </div>

      <!-- Category Filters -->
      <div class="api-filters">
        <button class="api-filter-btn active" data-category="all">
          <i class="fa-solid fa-list" aria-hidden="true"></i>
          All Variables
        </button>
        {
          apiCategories.map((category) => (
            <button class="api-filter-btn" data-category={category.id}>
              <i class={`fa-solid ${category.icon}`} aria-hidden="true" />
              {category.name}
            </button>
          ))
        }
      </div>

      <!-- Category Sections -->
      {
        apiCategories.map((category) => {
          const categoryVars = apiVariables.filter((v) => v.category === category.id);
          if (categoryVars.length === 0) return null;

          return (
            <div class="api-category-section" data-category={category.id}>
              <div class="api-category-header">
                <i class={`fa-solid ${category.icon} api-category-icon`} aria-hidden="true" />
                <div>
                  <h2 class="api-category-title">{category.name}</h2>
                  <p class="api-category-description">{category.description}</p>
                </div>
              </div>

              <div class="api-variables-grid">
                {categoryVars.map((variable) => (
                  <ApiVariableCard variable={variable} />
                ))}
              </div>
            </div>
          );
        })
      }

      <!-- No Results Message -->
      <div id="api-no-results" class="api-no-results" style="display: none;">
        <i class="fa-solid fa-search" aria-hidden="true"></i>
        <h3>No variables found</h3>
        <p>Try adjusting your search or filter criteria</p>
      </div>
    </section>

    <!-- EXAMPLES SECTION -->
    <section id="examples" class="section">
      <div class="section-header">
        <h1>Examples</h1>
        <p>Explore different glass effect variations</p>
      </div>

      <SearchFilter targetSection="examples" categories={exampleCategories} />
      <ViewportToggle targetSection="examples" />

      <div class="examples-grid" id="examples-grid">
        {
          examples.map((example) => (
            <div
              class="example-item-wrapper"
              data-title={example.title.toLowerCase()}
              data-description={example.description.toLowerCase()}
              data-category={example.category}
              data-tags={example.tags.join(',')}
            >
              <ExampleItem {...example} />
            </div>
          ))
        }
      </div>

      <div class="no-results" id="examples-no-results" style="display: none;">
        <i class="fa-solid fa-magnifying-glass" aria-hidden="true"></i>
        <h3>No examples found</h3>
        <p>Try adjusting your search or filter criteria</p>
      </div>
    </section>

    <!-- COMPONENTS SECTION -->
    <section id="components" class="section">
      <div class="section-header">
        <h1>Components</h1>
        <p>Pre-built component patterns</p>
      </div>

      <SearchFilter targetSection="components" categories={componentCategories} />
      <ViewportToggle targetSection="components" />

      <div class="components-grid" id="components-grid">
        <!-- Music Player Component -->
        <ComponentItem
          title="Music Player"
          description="A sleek music player widget featuring album artwork, track information, and playback controls. Perfect for music apps and media interfaces."
          htmlCode={components[0].htmlCode}
          category={components[0].category}
          tags={components[0].tags}
        >
          <div class="glass-container glass-container--rounded glass-container--large">
            <div class="glass-content">
              <div class="player">
                <div class="player__thumb">
                  <div class="player__img" role="img" aria-label="Album cover for Cosmic Journey">
                  </div>
                  <div class="player__legend">
                    <h3 class="player__legend-title">Cosmic Journey</h3>
                    <span class="player__legend-sub-title">Stellar Waves</span>
                  </div>
                </div>
                <div class="player__controls">
                  <i class="fa-solid fa-backward-step" aria-label="Previous track"></i>
                  <i class="fa-solid fa-play" aria-label="Play"></i>
                  <i class="fa-solid fa-forward-step" aria-label="Next track"></i>
                </div>
              </div>
            </div>
          </div>
        </ComponentItem>

        <!-- Navigation Bar Component -->
        <ComponentItem
          title="Navigation Bar"
          description="Elegant horizontal navigation with smooth hover effects. Includes icon and text labels for clear wayfinding in your application."
          htmlCode={components[1].htmlCode}
          category={components[1].category}
          tags={components[1].tags}
        >
          <div class="glass-container glass-container--rounded glass-container--medium">
            <div class="glass-content">
              <div class="glass-item glass-item--active">
                <i class="fa-solid fa-house" aria-label="Home"></i>
                Home
              </div>
              <div class="glass-item">
                <i class="fa-solid fa-compass" aria-label="Explore"></i>
                Explore
              </div>
              <div class="glass-item">
                <i class="fa-solid fa-heart" aria-label="Favorites"></i>
                Favorites
              </div>
              <div class="glass-item">
                <i class="fa-solid fa-user" aria-label="Profile"></i>
                Profile
              </div>
            </div>
          </div>
        </ComponentItem>

        <!-- Icon Dock Component -->
        <ComponentItem
          title="Icon Dock (with Lens Filter)"
          description="macOS-inspired application dock with SVG lens distortion effect. Features smooth hover animations and magnification for an enhanced user experience."
          htmlCode={components[2].htmlCode}
          category={components[2].category}
          tags={components[2].tags}
        >
          <div class="glass-container">
            <div class="glass-content">
              <a class="glass-content__link" href="#" aria-label="Open Finder">
                <i class="fa-solid fa-folder"></i>
              </a>
              <a class="glass-content__link" href="#" aria-label="Open Maps">
                <i class="fa-solid fa-map-location-dot"></i>
              </a>
              <a class="glass-content__link" href="#" aria-label="Open Messages">
                <i class="fa-solid fa-message"></i>
              </a>
              <a class="glass-content__link" href="#" aria-label="Open Safari">
                <i class="fa-solid fa-compass"></i>
              </a>
              <a class="glass-content__link" href="#" aria-label="Open Books">
                <i class="fa-solid fa-book"></i>
              </a>
            </div>
          </div>
        </ComponentItem>

        <!-- Search Button Component -->
        <ComponentItem
          title="Action Buttons"
          description="Versatile glass buttons perfect for search, notifications, settings, and other common actions. Compact design with clear iconography."
          htmlCode={components[3].htmlCode}
          category={components[3].category}
          tags={components[3].tags}
        >
          <div class="component-button-group">
            <div class="glass-container glass-container--small">
              <div class="glass-content">
                <i class="fa-solid fa-magnifying-glass" aria-label="Search"></i>
                Search
              </div>
            </div>
            <div class="glass-container glass-container--small">
              <div class="glass-content">
                <i class="fa-solid fa-bell" aria-label="Notifications"></i>
                Alerts
              </div>
            </div>
            <div class="glass-container glass-container--small">
              <div class="glass-content">
                <i class="fa-solid fa-download" aria-label="Download"></i>
                Download
              </div>
            </div>
          </div>
        </ComponentItem>

        <!-- Form Inputs Component -->
        <ComponentItem
          title="Form Inputs"
          description="Beautiful glass-styled input fields with labels and icons. Perfect for login forms, search bars, and data entry interfaces."
          htmlCode={components[4].htmlCode}
          category={components[4].category}
          tags={components[4].tags}
        >
          <div class="glass-form">
            <div class="glass-form__group">
              <label class="glass-form__label" for="demo-email">Email</label>
              <div class="glass-form__input-wrapper">
                <i class="fa-solid fa-envelope glass-form__icon" aria-hidden="true"></i>
                <input
                  type="email"
                  id="demo-email"
                  class="glass-form__input"
                  placeholder="Enter your email"
                />
              </div>
            </div>

            <div class="glass-form__group">
              <label class="glass-form__label" for="demo-password">Password</label>
              <div class="glass-form__input-wrapper">
                <i class="fa-solid fa-lock glass-form__icon" aria-hidden="true"></i>
                <input
                  type="password"
                  id="demo-password"
                  class="glass-form__input"
                  placeholder="Enter your password"
                />
              </div>
            </div>
          </div>
        </ComponentItem>

        <!-- Textarea Component -->
        <ComponentItem
          title="Textarea"
          description="Glass-styled textarea for longer text input. Ideal for comments, messages, and multi-line content."
          htmlCode={components[5].htmlCode}
          category={components[5].category}
          tags={components[5].tags}
        >
          <div class="glass-form">
            <div class="glass-form__group">
              <label class="glass-form__label" for="demo-message">Message</label>
              <textarea
                id="demo-message"
                class="glass-form__textarea"
                placeholder="Write your message here..."
                rows="5"></textarea>
            </div>
          </div>
        </ComponentItem>

        <!-- Select Dropdown Component -->
        <ComponentItem
          title="Select Dropdown"
          description="Elegant dropdown select with glass styling. Great for option selection and form controls."
          htmlCode={components[6].htmlCode}
          category={components[6].category}
          tags={components[6].tags}
        >
          <div class="glass-form">
            <div class="glass-form__group">
              <label class="glass-form__label" for="demo-country">Country</label>
              <div class="glass-form__select-wrapper">
                <i class="fa-solid fa-globe glass-form__icon" aria-hidden="true"></i>
