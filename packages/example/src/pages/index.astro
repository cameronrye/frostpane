---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import ExampleItem from '../components/ExampleItem.astro';
import ComponentItem from '../components/ComponentItem.astro';
import CodeBlock from '../components/CodeBlock.astro';
import { examples } from '../data/examples';
import { components } from '../data/components';
import pkg from '../../../frostpane/package.json';

const version = pkg.version;
---

<Layout title="Frostpane - Customizable Frosted Glass Effect Library">
  <Navigation />

  <main>
    <!-- HOME SECTION -->
    <section id="home" class="section active">
      <div class="section-header">
        <img src={`${import.meta.env.BASE_URL}/logo.svg`} alt="Frostpane Logo" class="logo-img">
        <h2 class="tagline">Beautiful frosted glass effects for modern web interfaces</h2>
        <p class="description">
          Create stunning glassmorphic UI components with customizable blur, transparency, and shadows.
          Built with pure CSS, fully responsive, and ready to use in any project.
        </p>

        <!-- Hero CTA Buttons -->
        <div class="hero-actions">
          <button class="glass-button glass-button--large" onclick="document.querySelector('[data-section=getting-started]').click()">
            <i class="fa-solid fa-rocket" aria-hidden="true"></i>
            Get Started
          </button>
          <a href="https://github.com/cameronrye/frostpane" target="_blank" rel="noopener noreferrer" class="glass-button glass-button--outline glass-button--large">
            <i class="fa-brands fa-github" aria-hidden="true"></i>
            View on GitHub
          </a>
        </div>

        <!-- Quick Install Snippet -->
        <div class="quick-install">
          <div class="quick-install-label">Quick Install</div>
          <div class="quick-install-code">
            <code>npm install frostpane</code>
            <button class="copy-button" data-copy="npm install frostpane" aria-label="Copy install command">
              <i class="fa-solid fa-copy" aria-hidden="true"></i>
            </button>
          </div>
        </div>

        <!-- Stats/Badges Section -->
        <div class="stats-badges">
          <div class="badge">
            <i class="fa-solid fa-cube" aria-hidden="true"></i>
            <div class="badge-content">
              <div class="badge-value">v{version}</div>
              <div class="badge-label">Latest Version</div>
            </div>
          </div>
          <div class="badge">
            <i class="fa-solid fa-download" aria-hidden="true"></i>
            <div class="badge-content">
              <div class="badge-value">Zero</div>
              <div class="badge-label">Dependencies</div>
            </div>
          </div>
          <div class="badge">
            <i class="fa-solid fa-feather" aria-hidden="true"></i>
            <div class="badge-content">
              <div class="badge-value">~8KB</div>
              <div class="badge-label">Bundle Size</div>
            </div>
          </div>
          <div class="badge">
            <i class="fa-brands fa-github" aria-hidden="true"></i>
            <div class="badge-content">
              <div class="badge-value">MIT</div>
              <div class="badge-label">License</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Why Frostpane Section -->
      <div class="why-frostpane">
        <h3 class="why-frostpane-title">Why Choose Frostpane?</h3>
        <p class="why-frostpane-subtitle">The modern solution for glassmorphic UI design</p>

        <div class="comparison-grid">
          <div class="comparison-card">
            <div class="comparison-header">
              <i class="fa-solid fa-wand-magic-sparkles" aria-hidden="true"></i>
              <h4>Pure CSS Solution</h4>
            </div>
            <p>No JavaScript required. Lightweight, performant, and works everywhere. Just add classes and customize with CSS variables.</p>
          </div>

          <div class="comparison-card">
            <div class="comparison-header">
              <i class="fa-solid fa-sliders" aria-hidden="true"></i>
              <h4>30+ Customization Options</h4>
            </div>
            <p>Fine-tune every aspect with CSS custom properties. From blur intensity to shadow depth, you have complete control.</p>
          </div>

          <div class="comparison-card">
            <div class="comparison-header">
              <i class="fa-solid fa-gauge-high" aria-hidden="true"></i>
              <h4>GPU-Accelerated</h4>
            </div>
            <p>Optimized for smooth 60fps animations. Uses hardware acceleration and efficient CSS properties for best performance.</p>
          </div>

          <div class="comparison-card">
            <div class="comparison-header">
              <i class="fa-solid fa-puzzle-piece" aria-hidden="true"></i>
              <h4>Framework Agnostic</h4>
            </div>
            <p>Works with React, Vue, Angular, Svelte, or vanilla HTML. Import as CSS or SCSS - your choice.</p>
          </div>

          <div class="comparison-card">
            <div class="comparison-header">
              <i class="fa-solid fa-universal-access" aria-hidden="true"></i>
              <h4>Accessibility First</h4>
            </div>
            <p>Respects prefers-reduced-motion, includes focus states, and maintains proper contrast ratios for readability.</p>
          </div>

          <div class="comparison-card">
            <div class="comparison-header">
              <i class="fa-solid fa-code-branch" aria-hidden="true"></i>
              <h4>Open Source & Free</h4>
            </div>
            <p>MIT licensed. Use it in personal or commercial projects. Contribute on GitHub and help make it better.</p>
          </div>
        </div>
      </div>

      <div class="demo-showcase">
        <!-- Feature Highlights -->
        <div class="feature-cards">
          <div class="glass-container glass-container--rounded glass-container--medium">
            <div class="glass-content glass-content--column">
              <i class="fa-solid fa-wand-magic-sparkles feature-icon" aria-hidden="true"></i>
              <h3 class="feature-title">Easy to Customize</h3>
              <p class="feature-description">
                Fine-tune every aspect using CSS variables. Adjust blur intensity, colors, shadows, and more.
              </p>
            </div>
          </div>

          <div class="glass-container glass-container--rounded glass-container--medium">
            <div class="glass-content glass-content--column">
              <i class="fa-solid fa-mobile-screen-button feature-icon" aria-hidden="true"></i>
              <h3 class="feature-title">Fully Responsive</h3>
              <p class="feature-description">
                Works seamlessly across all devices and screen sizes with built-in responsive utilities.
              </p>
            </div>
          </div>

          <div class="glass-container glass-container--rounded glass-container--medium">
            <div class="glass-content glass-content--column">
              <i class="fa-solid fa-bolt feature-icon" aria-hidden="true"></i>
              <h3 class="feature-title">Performance First</h3>
              <p class="feature-description">
                Optimized for smooth animations and GPU-accelerated effects without compromising speed.
              </p>
            </div>
          </div>
        </div>

        <!-- Interactive Demo Components -->
        <div class="demo-components">
          <h3 class="demo-section-title">Interactive Components</h3>
          <p class="demo-section-subtitle">See Frostpane in action with these interactive examples</p>

          <div class="demo-grid">
            <!-- Music Player Demo -->
            <div class="demo-item">
              <div class="demo-item-label">Music Player Widget</div>
              <div class="glass-container glass-container--rounded glass-container--large">
                <div class="glass-content">
                  <div class="player">
                    <div class="player__thumb">
                      <div class="player__img" role="img" aria-label="Album cover for Midnight Dreams"></div>
                      <div class="player__legend">
                        <h3 class="player__legend__title">Midnight Dreams</h3>
                        <span class="player__legend__sub-title">Luna & The Echoes</span>
                      </div>
                    </div>
                    <div class="player__controls">
                      <button class="player__control-btn" aria-label="Previous track">
                        <i class="fa-solid fa-backward-step"></i>
                      </button>
                      <button class="player__control-btn player__control-btn--play" data-playing="false" aria-label="Play">
                        <i class="fa-solid fa-play"></i>
                      </button>
                      <button class="player__control-btn" aria-label="Next track">
                        <i class="fa-solid fa-forward-step"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Navigation Bar Demo -->
            <div class="demo-item">
              <div class="demo-item-label">Navigation Bar</div>
              <div class="glass-container glass-container--rounded glass-container--medium">
                <div class="glass-content">
                  <div class="glass-item glass-item--active demo-nav-item" data-nav="home">
                    <i class="fa-solid fa-house" aria-hidden="true"></i>
                    Home
                  </div>
                  <div class="glass-item demo-nav-item" data-nav="explore">
                    <i class="fa-solid fa-compass" aria-hidden="true"></i>
                    Explore
                  </div>
                  <div class="glass-item demo-nav-item" data-nav="favorites">
                    <i class="fa-solid fa-heart" aria-hidden="true"></i>
                    Favorites
                  </div>
                  <div class="glass-item demo-nav-item" data-nav="profile">
                    <i class="fa-solid fa-user" aria-hidden="true"></i>
                    Profile
                  </div>
                </div>
              </div>
            </div>

            <!-- Action Buttons Demo -->
            <div class="demo-item demo-item--full">
              <div class="demo-item-label">Action Buttons</div>
              <div class="action-buttons-showcase">
                <div class="glass-container glass-container--rounded glass-container--small">
                  <div class="glass-content">
                    <i class="fa-solid fa-magnifying-glass" aria-label="Search"></i>
                    Search
                  </div>
                </div>

                <div class="glass-container glass-container--rounded glass-container--small">
                  <div class="glass-content">
                    <i class="fa-solid fa-bell" aria-label="Notifications"></i>
                    Notifications
                  </div>
                </div>

                <div class="glass-container glass-container--rounded glass-container--small">
                  <div class="glass-content">
                    <i class="fa-solid fa-gear" aria-label="Settings"></i>
                    Settings
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- GETTING STARTED SECTION -->
    <section id="getting-started" class="section">
      <div class="section-header">
        <h1>Getting Started</h1>
        <p>Quick guide to using Frostpane</p>
      </div>

      <div class="getting-started">
        <!-- CDN USAGE (RECOMMENDED) -->
        <div class="installation-method">
          <h2 class="method-title">
            <i class="fa-solid fa-bolt" aria-hidden="true"></i>
            Quick Start with CDN (Recommended)
          </h2>
          <p class="method-description">
            The fastest way to get started! Just add a single line to your HTML and you're ready to go.
          </p>

          <div class="step">
            <h3>Complete HTML Example</h3>
            <p>Copy and paste this complete example to get started instantly:</p>
            <CodeBlock code={`<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Frostpane Demo</title>

  <!-- Frostpane CSS from jsDelivr CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/frostpane@1/dist/frostpane.css">
</head>
<body>
  <div class="glass-container glass-container--rounded">
    <div class="glass-content">
      <h1>Hello, Frostpane!</h1>
      <p>Beautiful frosted glass effects with zero configuration.</p>
    </div>
  </div>
</body>
</html>`} label="HTML" />
          </div>

          <div class="step">
            <h3>CDN Options</h3>
            <p>Choose your preferred CDN provider:</p>

            <div class="cdn-option">
              <h4>
                <i class="fa-solid fa-star" aria-hidden="true"></i>
                jsDelivr (Recommended)
              </h4>
              <p>Fast, reliable, and automatically serves the latest version.</p>
              <CodeBlock code={`<!-- Latest version (automatically updates to newest 1.x release) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/frostpane@1/dist/frostpane.css">

<!-- Specific version (locked to 1.1.0) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/frostpane@1.1.0/dist/frostpane.css">

<!-- Core version (minimal, no utility classes) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/frostpane@1/dist/frostpane-core.css">

<!-- Unminified (for development/debugging) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/frostpane@1/dist/frostpane.unminified.css">`} label="HTML" />
            </div>

            <div class="cdn-option">
              <h4>
                <i class="fa-solid fa-box" aria-hidden="true"></i>
                unpkg
              </h4>
              <p>Simple and straightforward CDN for npm packages.</p>
              <CodeBlock code={`<!-- Latest version -->
<link rel="stylesheet" href="https://unpkg.com/frostpane@1/dist/frostpane.css">

<!-- Specific version -->
<link rel="stylesheet" href="https://unpkg.com/frostpane@1.1.0/dist/frostpane.css">

<!-- Core version -->
<link rel="stylesheet" href="https://unpkg.com/frostpane@1/dist/frostpane-core.css">`} label="HTML" />
            </div>
          </div>

          <div class="step">
            <h3>Available File Variants</h3>
            <p>Choose the right build for your needs:</p>
            <ul class="variant-list">
              <li>
                <strong>frostpane.css</strong> - Full version with all components and utilities (minified, ~8KB)
              </li>
              <li>
                <strong>frostpane-core.css</strong> - Core version with base styles only (minified, ~4KB)
              </li>
              <li>
                <strong>frostpane.unminified.css</strong> - Full version, unminified for debugging
              </li>
              <li>
                <strong>frostpane-core.unminified.css</strong> - Core version, unminified for debugging
              </li>
            </ul>
          </div>

          <div class="step">
            <h3>Version Pinning Best Practices</h3>
            <ul class="best-practices-list">
              <li>
                <strong>@1</strong> - Automatically gets the latest 1.x version (recommended for most projects)
              </li>
              <li>
                <strong>@1.1.0</strong> - Locks to a specific version (use for production stability)
              </li>
              <li>
                <strong>@latest</strong> - Always gets the newest version (may include breaking changes)
              </li>
            </ul>
          </div>
        </div>

        <!-- NPM INSTALLATION -->
        <div class="installation-method">
          <h2 class="method-title">
            <i class="fa-brands fa-npm" aria-hidden="true"></i>
            Installation via npm
          </h2>
          <p class="method-description">
            For projects using a build system or package manager.
          </p>

          <div class="step">
            <h3>1. Install the Package</h3>
            <p>Install Frostpane via npm:</p>
            <CodeBlock code="npm install frostpane" label="Bash" />
          </div>

          <div class="step">
            <h3>2. Import the CSS</h3>
            <p>Add Frostpane to your project:</p>
            <CodeBlock code={`<!-- In your HTML -->
<link rel="stylesheet" href="node_modules/frostpane/dist/frostpane.css">

<!-- Or import in your JavaScript/CSS -->
import 'frostpane/css';

/* Or in your CSS/SCSS */
@import 'frostpane/css';`} label="HTML/JS/CSS" />
          </div>

          <div class="step">
            <h3>3. Using SCSS Source Files</h3>
            <p>For advanced customization, import the SCSS source:</p>
            <CodeBlock code={`// Import full version
@use 'frostpane/scss' as frostpane;

// Import core version only
@use 'frostpane/scss/core' as frostpane;

// Override variables before importing
@use 'frostpane/scss' as frostpane with (
  $fp-bg-color: rgba(0, 0, 0, 0.4),
  $fp-backdrop-blur: 12px
);`} label="SCSS" />
          </div>
        </div>

        <!-- USAGE EXAMPLES -->
        <div class="installation-method">
          <h2 class="method-title">
            <i class="fa-solid fa-code" aria-hidden="true"></i>
            Basic Usage
          </h2>

          <div class="step">
            <h3>Create Glass Containers</h3>
            <p>Start building with glass containers:</p>
            <CodeBlock code={`<div class="glass-container glass-container--rounded">
  <div class="glass-content">
    Your content here
  </div>
</div>`} label="HTML" />
          </div>

          <div class="step">
            <h3>Customize with CSS Variables</h3>
            <p>Override default styles using CSS custom properties:</p>
            <CodeBlock code={`.my-glass {
  --fp-bg-color: rgba(0, 0, 0, 0.4);
  --fp-backdrop-blur: 12px;
  --fp-border-radius: 1rem;
}`} label="CSS" />
          </div>

          <div class="step">
            <h3>Use Modifier Classes</h3>
            <p>Apply pre-built variations:</p>
            <CodeBlock code={`<!-- Different sizes -->
<div class="glass-container glass-container--small">Small</div>
<div class="glass-container glass-container--medium">Medium</div>
<div class="glass-container glass-container--large">Large</div>

<!-- Different shapes -->
<div class="glass-container glass-container--rounded">Rounded</div>
<div class="glass-container glass-container--pill">Pill</div>

<!-- Interactive states -->
<div class="glass-item glass-item--active">Active Item</div>
<div class="glass-item glass-item--hover">Hover Effect</div>`} label="HTML" />
          </div>
        </div>
      </div>
    </section>

    <!-- EXAMPLES SECTION -->
    <section id="examples" class="section">
      <div class="section-header">
        <h1>Examples</h1>
        <p>Explore different glass effect variations</p>
      </div>

      <div class="examples-grid">
        {examples.map((example) => <ExampleItem {...example} />)}
      </div>
    </section>

    <!-- COMPONENTS SECTION -->
    <section id="components" class="section">
      <div class="section-header">
        <h1>Components</h1>
        <p>Pre-built component patterns</p>
      </div>

      <div class="components-grid">
        <!-- Music Player Component -->
        <ComponentItem
          title="Music Player"
          description="A sleek music player widget featuring album artwork, track information, and playback controls. Perfect for music apps and media interfaces."
          htmlCode={components[0].htmlCode}
        >
          <div class="glass-container glass-container--rounded glass-container--large">
            <div class="glass-content">
              <div class="player">
                <div class="player__thumb">
                  <div class="player__img" role="img" aria-label="Album cover for Cosmic Journey"></div>
                  <div class="player__legend">
                    <h3 class="player__legend__title">Cosmic Journey</h3>
                    <span class="player__legend__sub-title">Stellar Waves</span>
                  </div>
                </div>
                <div class="player__controls">
                  <i class="fa-solid fa-backward-step" aria-label="Previous track"></i>
                  <i class="fa-solid fa-play" aria-label="Play"></i>
                  <i class="fa-solid fa-forward-step" aria-label="Next track"></i>
                </div>
              </div>
            </div>
          </div>
        </ComponentItem>

        <!-- Navigation Bar Component -->
        <ComponentItem
          title="Navigation Bar"
          description="Elegant horizontal navigation with smooth hover effects. Includes icon and text labels for clear wayfinding in your application."
          htmlCode={components[1].htmlCode}
        >
          <div class="glass-container glass-container--rounded glass-container--medium">
            <div class="glass-content">
              <div class="glass-item glass-item--active">
                <i class="fa-solid fa-house" aria-label="Home"></i>
                Home
              </div>
              <div class="glass-item">
                <i class="fa-solid fa-compass" aria-label="Explore"></i>
                Explore
              </div>
              <div class="glass-item">
                <i class="fa-solid fa-heart" aria-label="Favorites"></i>
                Favorites
              </div>
              <div class="glass-item">
                <i class="fa-solid fa-user" aria-label="Profile"></i>
                Profile
              </div>
            </div>
          </div>
        </ComponentItem>

        <!-- Icon Dock Component -->
        <ComponentItem
          title="Icon Dock (with Lens Filter)"
          description="macOS-inspired application dock with SVG lens distortion effect. Features smooth hover animations and magnification for an enhanced user experience."
          htmlCode={components[2].htmlCode}
        >
          <div class="glass-container">
            <div class="glass-content">
              <a class="glass-content__link" href="#" aria-label="Open Finder">
                <i class="fa-solid fa-folder"></i>
              </a>
              <a class="glass-content__link" href="#" aria-label="Open Maps">
                <i class="fa-solid fa-map-location-dot"></i>
              </a>
              <a class="glass-content__link" href="#" aria-label="Open Messages">
                <i class="fa-solid fa-message"></i>
              </a>
              <a class="glass-content__link" href="#" aria-label="Open Safari">
                <i class="fa-solid fa-compass"></i>
              </a>
              <a class="glass-content__link" href="#" aria-label="Open Books">
                <i class="fa-solid fa-book"></i>
              </a>
            </div>
          </div>
        </ComponentItem>

        <!-- Search Button Component -->
        <ComponentItem
          title="Action Buttons"
          description="Versatile glass buttons perfect for search, notifications, settings, and other common actions. Compact design with clear iconography."
          htmlCode={components[3].htmlCode}
        >
          <div class="component-button-group">
            <div class="glass-container glass-container--small">
              <div class="glass-content">
                <i class="fa-solid fa-magnifying-glass" aria-label="Search"></i>
                Search
              </div>
            </div>
            <div class="glass-container glass-container--small">
              <div class="glass-content">
                <i class="fa-solid fa-bell" aria-label="Notifications"></i>
                Alerts
              </div>
            </div>
            <div class="glass-container glass-container--small">
              <div class="glass-content">
                <i class="fa-solid fa-download" aria-label="Download"></i>
                Download
              </div>
            </div>
          </div>
        </ComponentItem>
      </div>
    </section>
  </main>

  <!-- SVG Filter -->
  <svg aria-hidden="true" width="0" height="0" style="position: absolute;">
    <filter id="lensFilter">
      <feGaussianBlur stdDeviation="0.6"/>
      <feColorMatrix type="saturate" values="1.2"/>
    </filter>
  </svg>

  <!-- Copy Button Script -->
  <script>
    // Handle copy button for quick install
    document.querySelectorAll('.copy-button').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const button = e.currentTarget as HTMLElement;
        const textToCopy = button.getAttribute('data-copy');

        if (textToCopy) {
          try {
            await navigator.clipboard.writeText(textToCopy);
            const icon = button.querySelector('i');
            if (icon) {
              icon.className = 'fa-solid fa-check';
              setTimeout(() => {
                icon.className = 'fa-solid fa-copy';
              }, 2000);
            }
          } catch (err) {
            console.error('Failed to copy:', err);
          }
        }
      });
    });

    // Make music player interactive
    const playButton = document.querySelector('.player__control-btn--play');
    if (playButton) {
      playButton.addEventListener('click', () => {
        const isPlaying = playButton.getAttribute('data-playing') === 'true';
        const icon = playButton.querySelector('i');

        if (isPlaying) {
          playButton.setAttribute('data-playing', 'false');
          if (icon) icon.className = 'fa-solid fa-play';
        } else {
          playButton.setAttribute('data-playing', 'true');
          if (icon) icon.className = 'fa-solid fa-pause';
        }
      });
    }

    // Make demo navigation interactive
    document.querySelectorAll('.demo-nav-item').forEach(item => {
      item.addEventListener('click', (e) => {
        const button = e.currentTarget as HTMLElement;
        const parent = button.closest('.demo-nav');

        if (parent) {
          parent.querySelectorAll('.demo-nav-item').forEach(btn => {
            btn.classList.remove('glass-item--active');
          });
          button.classList.add('glass-item--active');
        }
      });
    });
  </script>
</Layout>

