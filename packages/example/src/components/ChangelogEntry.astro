---
interface Change {
  category: 'added' | 'changed' | 'deprecated' | 'removed' | 'fixed' | 'security';
  items: string[];
}

interface Props {
  version: string;
  date: string;
  type: 'major' | 'minor' | 'patch';
  changes: Change[];
  breaking?: string[];
  migration?: string;
}

const { version, date, type, changes, breaking, migration } = Astro.props;

const typeColors = {
  major: 'danger',
  minor: 'success',
  patch: 'info',
};

const categoryIcons = {
  added: 'fa-solid fa-plus-circle',
  changed: 'fa-solid fa-edit',
  deprecated: 'fa-solid fa-exclamation-triangle',
  removed: 'fa-solid fa-minus-circle',
  fixed: 'fa-solid fa-wrench',
  security: 'fa-solid fa-shield-halved',
};

const categoryColors = {
  added: 'success',
  changed: 'info',
  deprecated: 'warning',
  removed: 'danger',
  fixed: 'primary',
  security: 'danger',
};
---

<div class="changelog-entry glass-container glass-container--rounded">
  <div class="glass-content glass-content--column">
    <div class="changelog-entry__header">
      <div class="changelog-entry__version-group">
        <h3 class="changelog-entry__version">v{version}</h3>
        <span class={`glass-badge glass-badge--${typeColors[type]}`}>
          {type.charAt(0).toUpperCase() + type.slice(1)}
        </span>
      </div>
      <span class="changelog-entry__date">
        <i class="fa-solid fa-calendar" aria-hidden="true"></i>
        {date}
      </span>
    </div>

    {
      breaking && breaking.length > 0 && (
        <div class="changelog-entry__breaking">
          <h4>
            <i class="fa-solid fa-exclamation-triangle" aria-hidden="true" />
            Breaking Changes
          </h4>
          <ul>
            {breaking.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        </div>
      )
    }

    {
      changes.map((changeGroup) => (
        <div class="changelog-entry__section">
          <h4
            class={`changelog-entry__category changelog-entry__category--${categoryColors[changeGroup.category]}`}
          >
            <i class={categoryIcons[changeGroup.category]} aria-hidden="true" />
            {changeGroup.category.charAt(0).toUpperCase() + changeGroup.category.slice(1)}
          </h4>
          <ul>
            {changeGroup.items.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        </div>
      ))
    }

    {
      migration && (
        <div class="changelog-entry__migration">
          <h4>
            <i class="fa-solid fa-code-branch" aria-hidden="true" />
            Migration Guide
          </h4>
          <pre>
            <code>{migration}</code>
          </pre>
        </div>
      )
    }
  </div>
</div>

<style>
  .changelog-entry {
    margin-bottom: 2rem;
  }

  .changelog-entry__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .changelog-entry__version-group {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .changelog-entry__version {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 700;
  }

  .changelog-entry__date {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    opacity: 0.7;
    font-size: 0.9rem;
  }

  .changelog-entry__breaking {
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: rgba(239, 68, 68, 0.1);
    border-left: 3px solid var(--fp-danger-color, #ef4444);
    border-radius: 4px;
  }

  .changelog-entry__breaking h4 {
    margin: 0 0 0.75rem 0;
    color: var(--fp-danger-color, #ef4444);
    font-size: 1rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .changelog-entry__section {
    margin-bottom: 1.25rem;
  }

  .changelog-entry__category {
    margin: 0 0 0.75rem 0;
    font-size: 1rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .changelog-entry__category--success {
    color: var(--fp-success-color, #10b981);
  }

  .changelog-entry__category--info {
    color: var(--fp-info-color, #3b82f6);
  }

  .changelog-entry__category--warning {
    color: var(--fp-warning-color, #f59e0b);
  }

  .changelog-entry__category--danger {
    color: var(--fp-danger-color, #ef4444);
  }

  .changelog-entry__category--primary {
    color: var(--fp-primary-color, #3b82f6);
  }

  .changelog-entry__section ul,
  .changelog-entry__breaking ul {
    margin: 0;
    padding-left: 1.5rem;
    list-style: disc;
  }

  .changelog-entry__section ul li,
  .changelog-entry__breaking ul li {
    margin-bottom: 0.5rem;
    line-height: 1.5;
    opacity: 0.9;
  }

  .changelog-entry__migration {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .changelog-entry__migration h4 {
    margin: 0 0 1rem 0;
    font-size: 1rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--fp-accent-color, #60a5fa);
  }

  .changelog-entry__migration pre {
    margin: 0;
    padding: 1.5rem;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 8px;
    overflow-x: auto;
  }

  .changelog-entry__migration code {
    font-family: 'Courier New', Courier, monospace;
    font-size: 0.9rem;
    line-height: 1.6;
    color: #e5e7eb;
  }

  @media (max-width: 768px) {
    .changelog-entry__header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }
  }
</style>
