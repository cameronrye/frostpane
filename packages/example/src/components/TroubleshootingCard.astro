---
interface Props {
  problem: string;
  symptoms: string[];
  causes: string[];
  solutions: string[];
  code?: string;
  category: 'visual' | 'performance' | 'compatibility' | 'implementation';
  icon: string;
}

const { problem, symptoms, causes, solutions, code, category, icon } = Astro.props;

const categoryColors = {
  visual: 'primary',
  performance: 'success',
  compatibility: 'warning',
  implementation: 'info',
};
---

<div class="troubleshooting-card glass-container glass-container--rounded">
  <div class="glass-content glass-content--column">
    <div class="troubleshooting-card__header">
      <div class="troubleshooting-card__icon">
        <i class={icon} aria-hidden="true"></i>
      </div>
      <div class="troubleshooting-card__title-group">
        <h3 class="troubleshooting-card__title">{problem}</h3>
        <span class={`glass-badge glass-badge--${categoryColors[category]}`}>
          {category.charAt(0).toUpperCase() + category.slice(1)}
        </span>
      </div>
    </div>

    <div class="troubleshooting-card__section">
      <h4>
        <i class="fa-solid fa-exclamation-triangle" aria-hidden="true"></i>
        Symptoms
      </h4>
      <ul>
        {symptoms.map((item) => <li>{item}</li>)}
      </ul>
    </div>

    <div class="troubleshooting-card__section">
      <h4>
        <i class="fa-solid fa-search" aria-hidden="true"></i>
        Possible Causes
      </h4>
      <ul>
        {causes.map((item) => <li>{item}</li>)}
      </ul>
    </div>

    <div class="troubleshooting-card__section troubleshooting-card__section--solutions">
      <h4>
        <i class="fa-solid fa-wrench" aria-hidden="true"></i>
        Solutions
      </h4>
      <ul>
        {solutions.map((item) => <li>{item}</li>)}
      </ul>
    </div>

    {
      code && (
        <div class="troubleshooting-card__code">
          <div class="code-header">
            <span class="code-language">Solution Code</span>
            <button
              class="glass-btn glass-btn--small copy-btn"
              data-code={code}
              aria-label="Copy code"
            >
              <i class="fa-solid fa-copy" aria-hidden="true" />
              Copy
            </button>
          </div>
          <pre>
            <code>{code}</code>
          </pre>
        </div>
      )
    }
  </div>
</div>

<style>
  .troubleshooting-card {
    transition: all 0.3s ease;
  }

  .troubleshooting-card:hover {
    transform: translateY(-2px);
  }

  .troubleshooting-card__header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .troubleshooting-card__icon {
    font-size: 1.75rem;
    color: var(--fp-danger-color, #ef4444);
    flex-shrink: 0;
  }

  .troubleshooting-card__title-group {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .troubleshooting-card__title {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
  }

  .troubleshooting-card__section {
    margin-bottom: 1.5rem;
  }

  .troubleshooting-card__section h4 {
    margin: 0 0 0.75rem 0;
    font-size: 1rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--fp-accent-color, #60a5fa);
  }

  .troubleshooting-card__section--solutions h4 {
    color: var(--fp-success-color, #10b981);
  }

  .troubleshooting-card__section ul {
    margin: 0;
    padding-left: 1.5rem;
    list-style: disc;
  }

  .troubleshooting-card__section ul li {
    margin-bottom: 0.5rem;
    line-height: 1.5;
    opacity: 0.9;
  }

  .troubleshooting-card__code {
    margin-top: 1.5rem;
  }

  .code-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 8px 8px 0 0;
  }

  .code-language {
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    opacity: 0.7;
  }

  pre {
    margin: 0;
    padding: 1.5rem;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 0 0 8px 8px;
    overflow-x: auto;
  }

  code {
    font-family: 'Courier New', Courier, monospace;
    font-size: 0.9rem;
    line-height: 1.6;
    color: #e5e7eb;
  }

  @media (max-width: 768px) {
    .troubleshooting-card__header {
      flex-direction: column;
    }
  }
</style>
