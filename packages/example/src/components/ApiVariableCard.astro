---
import type { ApiVariable } from '../data/apiDocs';

interface Props {
  variable: ApiVariable;
}

const { variable } = Astro.props;

// Helper function to get a visual preview based on variable type
function getPreviewStyle(variable: ApiVariable): string {
  const value = variable.defaultValue;

  if (variable.type === 'color') {
    return `background: ${value};`;
  } else if (variable.cssVar.includes('blur')) {
    return `backdrop-filter: blur(${value}); background: rgba(255, 255, 255, 0.2);`;
  } else if (variable.cssVar.includes('radius')) {
    return `border-radius: ${value}; background: rgba(255, 255, 255, 0.3);`;
  } else if (variable.cssVar.includes('shadow')) {
    return `box-shadow: 0 ${value} ${value} rgba(0, 0, 0, 0.3); background: rgba(255, 255, 255, 0.3);`;
  }

  return 'background: rgba(255, 255, 255, 0.2);';
}

const previewStyle = getPreviewStyle(variable);
---

<div
  class="api-variable-card"
  data-category={variable.category}
  data-search-text={`${variable.name} ${variable.cssVar} ${variable.description}`.toLowerCase()}
>
  <div class="api-variable-card__header">
    <h3 class="api-variable-card__name">{variable.name}</h3>
    {
      variable.type === 'color' && (
        <div
          class="api-variable-card__preview api-variable-card__preview--color"
          style={previewStyle}
          aria-label={`Color preview: ${variable.defaultValue}`}
        />
      )
    }
  </div>

  <div class="api-variable-card__body">
    <p class="api-variable-card__description">{variable.description}</p>

    <div class="api-variable-card__details">
      <div class="api-variable-card__detail">
        <span class="api-variable-card__label">CSS Variable:</span>
        <code class="api-variable-card__code">{variable.cssVar}</code>
        <button
          class="api-variable-card__copy"
          onclick={`navigator.clipboard.writeText('${variable.cssVar}')`}
          aria-label={`Copy ${variable.cssVar}`}
        >
          <i class="fa-solid fa-copy"></i>
        </button>
      </div>

      <div class="api-variable-card__detail">
        <span class="api-variable-card__label">Default Value:</span>
        <code class="api-variable-card__code">{variable.defaultValue}</code>
        <button
          class="api-variable-card__copy"
          onclick={`navigator.clipboard.writeText('${variable.defaultValue}')`}
          aria-label={`Copy ${variable.defaultValue}`}
        >
          <i class="fa-solid fa-copy"></i>
        </button>
      </div>

      <div class="api-variable-card__detail">
        <span class="api-variable-card__label">Type:</span>
        <span class="api-variable-card__type">{variable.type}</span>
      </div>
    </div>

    {
      variable.relatedVars && variable.relatedVars.length > 0 && (
        <div class="api-variable-card__related">
          <span class="api-variable-card__label">Related Variables:</span>
          <div class="api-variable-card__related-list">
            {variable.relatedVars.map((relatedVar) => (
              <code class="api-variable-card__related-var">{relatedVar}</code>
            ))}
          </div>
        </div>
      )
    }

    <div class="api-variable-card__example">
      <span class="api-variable-card__label">Usage Example:</span>
      <pre
        class="api-variable-card__code-block"><code>.my-element {`{
  ${variable.cssVar}: ${variable.defaultValue};
}`}</code></pre>
    </div>
  </div>
</div>

<style lang="scss">
  .api-variable-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 1rem;
    padding: 1.5rem;
    transition: all 0.3s ease;

    &:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
      border-color: rgba(255, 255, 255, 0.3);
    }

    &__header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1rem;
    }

    &__name {
      font-size: 1.25rem;
      font-weight: 600;
      color: white;
      margin: 0;
    }

    &__preview {
      width: 40px;
      height: 40px;
      border-radius: 0.5rem;
      border: 2px solid rgba(255, 255, 255, 0.3);
      flex-shrink: 0;

      &--color {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
      }
    }

    &__body {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    &__description {
      color: rgba(255, 255, 255, 0.9);
      margin: 0;
      line-height: 1.6;
    }

    &__details {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    &__detail {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    &__label {
      font-size: 0.875rem;
      font-weight: 600;
      color: rgba(255, 255, 255, 0.7);
      min-width: 120px;
    }

    &__code {
      background: rgba(0, 0, 0, 0.3);
      padding: 0.25rem 0.5rem;
      border-radius: 0.25rem;
      font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
      font-size: 0.875rem;
      color: #a8dadc;
      flex: 1;
    }

    &__copy {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 0.25rem;
      padding: 0.25rem 0.5rem;
      color: white;
      cursor: pointer;
      transition: all 0.2s ease;
      font-size: 0.875rem;

      &:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: scale(1.05);
      }

      &:active {
        transform: scale(0.95);
      }
    }

    &__type {
      background: rgba(103, 126, 234, 0.3);
      padding: 0.25rem 0.75rem;
      border-radius: 1rem;
      font-size: 0.75rem;
      font-weight: 600;
      color: white;
      text-transform: uppercase;
    }

    &__related {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    &__related-list {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    &__related-var {
      background: rgba(0, 0, 0, 0.3);
      padding: 0.25rem 0.5rem;
      border-radius: 0.25rem;
      font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
      font-size: 0.75rem;
      color: #f1fa8c;
    }

    &__example {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    &__code-block {
      background: rgba(0, 0, 0, 0.4);
      padding: 1rem;
      border-radius: 0.5rem;
      margin: 0;
      overflow-x: auto;

      code {
        font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
        font-size: 0.875rem;
        color: #50fa7b;
        line-height: 1.6;
      }
    }
  }
</style>
