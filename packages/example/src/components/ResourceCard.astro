---
interface Props {
  title: string;
  description: string;
  url: string;
  category: 'article' | 'library' | 'tool' | 'inspiration';
  icon: string;
  tags: string[];
}

const { title, description, url, category, icon, tags } = Astro.props;

const categoryColors = {
  article: 'primary',
  library: 'success',
  tool: 'warning',
  inspiration: 'info',
};

const categoryLabels = {
  article: 'Article',
  library: 'Library',
  tool: 'Tool',
  inspiration: 'Inspiration',
};
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="resource-card glass-container glass-container--rounded"
>
  <div class="glass-content">
    <div class="resource-card__icon">
      <i class={icon} aria-hidden="true"></i>
    </div>
    <div class="resource-card__content">
      <div class="resource-card__header">
        <h3 class="resource-card__title">{title}</h3>
        <span class={`glass-badge glass-badge--${categoryColors[category]}`}>
          {categoryLabels[category]}
        </span>
      </div>
      <p class="resource-card__description">{description}</p>
      <div class="resource-card__tags">
        {tags.map((tag) => <span class="resource-card__tag">{tag}</span>)}
      </div>
      <div class="resource-card__link">
        <span>Visit Resource</span>
        <i class="fa-solid fa-arrow-up-right-from-square" aria-hidden="true"></i>
      </div>
    </div>
  </div>
</a>

<style>
  .resource-card {
    display: block;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
  }

  .resource-card:hover {
    transform: translateY(-4px);
  }

  .resource-card .glass-content {
    display: flex;
    gap: 1.5rem;
    padding: 1.5rem;
  }

  .resource-card__icon {
    font-size: 2rem;
    color: var(--fp-accent-color, #60a5fa);
    flex-shrink: 0;
  }

  .resource-card__content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .resource-card__header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
  }

  .resource-card__title {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 600;
    flex: 1;
  }

  .resource-card__description {
    margin: 0;
    opacity: 0.9;
    line-height: 1.5;
    font-size: 0.95rem;
  }

  .resource-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .resource-card__tag {
    padding: 0.25rem 0.75rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    font-size: 0.8rem;
    opacity: 0.8;
  }

  .resource-card__link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--fp-accent-color, #60a5fa);
    font-weight: 500;
    font-size: 0.9rem;
    margin-top: 0.5rem;
  }

  .resource-card:hover .resource-card__link {
    gap: 0.75rem;
  }

  @media (max-width: 768px) {
    .resource-card .glass-content {
      flex-direction: column;
      gap: 1rem;
    }

    .resource-card__header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
