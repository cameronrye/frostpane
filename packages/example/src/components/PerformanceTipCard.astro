---
interface Props {
  title: string;
  description: string;
  code?: string;
  impact: 'high' | 'medium' | 'low';
  icon: string;
}

const { title, description, code, impact, icon } = Astro.props;

const impactColors = {
  high: 'danger',
  medium: 'warning',
  low: 'info',
};

const impactLabels = {
  high: 'High Impact',
  medium: 'Medium Impact',
  low: 'Low Impact',
};
---

<div class="tip-card glass-container glass-container--rounded">
  <div class="glass-content glass-content--column">
    <div class="tip-card__header">
      <div class="tip-card__icon">
        <i class={icon} aria-hidden="true"></i>
      </div>
      <div class="tip-card__title-group">
        <h3 class="tip-card__title">{title}</h3>
        <span class={`glass-badge glass-badge--${impactColors[impact]}`}>
          {impactLabels[impact]}
        </span>
      </div>
    </div>
    <p class="tip-card__description">{description}</p>
    {
      code && (
        <div class="tip-card__code">
          <div class="code-header">
            <span class="code-language">CSS</span>
            <button
              class="glass-btn glass-btn--small copy-btn"
              data-code={code}
              aria-label="Copy code"
            >
              <i class="fa-solid fa-copy" aria-hidden="true" />
              Copy
            </button>
          </div>
          <pre>
            <code>{code}</code>
          </pre>
        </div>
      )
    }
  </div>
</div>

<style>
  .tip-card {
    transition: all 0.3s ease;
  }

  .tip-card:hover {
    transform: translateY(-2px);
  }

  .tip-card__header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .tip-card__icon {
    font-size: 1.75rem;
    color: var(--fp-accent-color, #60a5fa);
    flex-shrink: 0;
  }

  .tip-card__title-group {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .tip-card__title {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
  }

  .tip-card__description {
    margin: 0 0 1rem 0;
    opacity: 0.9;
    line-height: 1.6;
  }

  .tip-card__code {
    margin-top: 1rem;
  }

  .code-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 8px 8px 0 0;
  }

  .code-language {
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    opacity: 0.7;
  }

  pre {
    margin: 0;
    padding: 1.5rem;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 0 0 8px 8px;
    overflow-x: auto;
  }

  code {
    font-family: 'Courier New', Courier, monospace;
    font-size: 0.9rem;
    line-height: 1.6;
    color: #e5e7eb;
  }

  @media (max-width: 768px) {
    .tip-card__header {
      flex-direction: column;
    }

    .tip-card__title {
      font-size: 1.1rem;
    }
  }
</style>
