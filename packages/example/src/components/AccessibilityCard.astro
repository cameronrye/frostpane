---
export interface Props {
  icon: string;
  title: string;
  description: string;
  tips: string[];
}

const { icon, title, description, tips } = Astro.props;
---

<div class="accessibility-card">
  <div class="accessibility-card__header">
    <div class="accessibility-card__icon">
      <i class={`fa-solid ${icon}`} aria-hidden="true"></i>
    </div>
    <h3 class="accessibility-card__title">{title}</h3>
  </div>
  <p class="accessibility-card__description">{description}</p>
  <ul class="accessibility-card__tips">
    {tips.map((tip) => <li>{tip}</li>)}
  </ul>
</div>
