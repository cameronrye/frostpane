---
interface Props {
  targetSection: string;
}

const { targetSection } = Astro.props;
---

<div class="viewport-toggle" data-target={targetSection}>
  <div class="viewport-toggle__label">
    <i class="fa-solid fa-display"></i>
    <span class="viewport-toggle__size">Desktop (1200px)</span>
  </div>
  <div class="viewport-toggle__buttons">
    <button
      class="viewport-toggle__button viewport-toggle__button--active"
      data-viewport="desktop"
      title="Desktop view"
      aria-label="Switch to desktop view"
    >
      <i class="fa-solid fa-desktop"></i>
    </button>
    <button
      class="viewport-toggle__button"
      data-viewport="tablet"
      title="Tablet view"
      aria-label="Switch to tablet view"
    >
      <i class="fa-solid fa-tablet-screen-button"></i>
    </button>
    <button
      class="viewport-toggle__button"
      data-viewport="mobile"
      title="Mobile view"
      aria-label="Switch to mobile view"
    >
      <i class="fa-solid fa-mobile-screen"></i>
    </button>
  </div>
</div>

<style>
  .viewport-toggle {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1rem;
    margin-bottom: 2rem;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.75rem;
    flex-wrap: wrap;
  }

  .viewport-toggle__label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .viewport-toggle__label i {
    font-size: 1rem;
    color: var(--fp-color-primary);
  }

  .viewport-toggle__size {
    font-family: 'Courier New', monospace;
    color: var(--fp-color-primary);
  }

  .viewport-toggle__buttons {
    display: flex;
    gap: 0.5rem;
  }

  .viewport-toggle__button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    color: rgba(255, 255, 255, 0.6);
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s var(--fp-ease-smooth);
  }

  .viewport-toggle__button:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.9);
    transform: translateY(-2px);
  }

  .viewport-toggle__button--active {
    background: var(--fp-color-primary);
    border-color: var(--fp-color-primary);
    color: white;
  }

  .viewport-toggle__button--active:hover {
    background: var(--fp-color-primary-light);
    border-color: var(--fp-color-primary-light);
    transform: translateY(-2px);
  }

  @media (max-width: 640px) {
    .viewport-toggle {
      flex-direction: column;
      align-items: stretch;
    }

    .viewport-toggle__label {
      justify-content: center;
    }

    .viewport-toggle__buttons {
      justify-content: center;
    }
  }
</style>
