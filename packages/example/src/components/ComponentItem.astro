---
import CodeBlock from './CodeBlock.astro';

interface Props {
  title: string;
  description: string;
  htmlCode: string;
  category?: string;
  tags?: string[];
}

const { title, description, htmlCode, category, tags } = Astro.props;
---

<div
  class="component-item"
  data-title={title.toLowerCase()}
  data-description={description.toLowerCase()}
  data-category={category}
  data-tags={tags?.join(',') || ''}
>
  <h3 class="example-title">{title}</h3>
  <p class="example-description">{description}</p>
  <div class="example-preview">
    <slot />
  </div>
  <CodeBlock code={htmlCode} label="HTML" />
</div>
