---
interface Props {
  name: string;
  icon: string;
  minVersion: string;
  support: 'full' | 'partial' | 'none';
  notes?: string;
}

const { name, icon, minVersion, support, notes } = Astro.props;

const supportClass = {
  full: 'browser-card--full',
  partial: 'browser-card--partial',
  none: 'browser-card--none',
}[support];

const supportIcon = {
  full: 'fa-solid fa-circle-check',
  partial: 'fa-solid fa-circle-exclamation',
  none: 'fa-solid fa-circle-xmark',
}[support];

const supportLabel = {
  full: 'Full Support',
  partial: 'Partial Support',
  none: 'Not Supported',
}[support];
---

<div class={`browser-card ${supportClass}`}>
  <div class="browser-card__header">
    <i class={`${icon} browser-card__icon`} aria-hidden="true"></i>
    <h3 class="browser-card__name">{name}</h3>
  </div>
  <div class="browser-card__version">{minVersion}</div>
  <div class="browser-card__support">
    <i class={`${supportIcon} browser-card__support-icon`} aria-hidden="true"></i>
    <span>{supportLabel}</span>
  </div>
  {notes && <p class="browser-card__notes">{notes}</p>}
</div>
