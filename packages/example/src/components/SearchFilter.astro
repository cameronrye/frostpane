---
interface Props {
  targetSection: string;
  categories: string[];
}

const { targetSection, categories } = Astro.props;
---

<div class="search-filter" data-target={targetSection}>
  <div class="search-filter__controls">
    <!-- Search Input -->
    <div class="search-filter__search">
      <i class="fa-solid fa-magnifying-glass search-filter__search-icon" aria-hidden="true"></i>
      <input type="text" class="search-filter__input" placeholder="Search..." aria-label="Search" />
      <button class="search-filter__clear" aria-label="Clear search" style="display: none;">
        <i class="fa-solid fa-xmark" aria-hidden="true"></i>
      </button>
    </div>

    <!-- Category Filter -->
    <div class="search-filter__category">
      <i class="fa-solid fa-filter search-filter__category-icon" aria-hidden="true"></i>
      <select class="search-filter__select" aria-label="Filter by category">
        <option value="">All Categories</option>
        {categories.map((category) => <option value={category}>{category}</option>)}
      </select>
    </div>

    <!-- Sort Options -->
    <div class="search-filter__sort">
      <i class="fa-solid fa-arrow-down-a-z search-filter__sort-icon" aria-hidden="true"></i>
      <select class="search-filter__select" aria-label="Sort by">
        <option value="default">Default</option>
        <option value="name-asc">Name (A-Z)</option>
        <option value="name-desc">Name (Z-A)</option>
      </select>
    </div>
  </div>

  <!-- Results Count -->
  <div class="search-filter__results">
    <span class="search-filter__count"></span>
  </div>
</div>

<style>
  .search-filter {
    margin-bottom: 2rem;
  }

  .search-filter__controls {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }

  .search-filter__search,
  .search-filter__category,
  .search-filter__sort {
    position: relative;
    flex: 1;
    min-width: 200px;
  }

  .search-filter__search-icon,
  .search-filter__category-icon,
  .search-filter__sort-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: rgba(255, 255, 255, 0.6);
    pointer-events: none;
    z-index: 1;
  }

  .search-filter__input,
  .search-filter__select {
    width: 100%;
    padding: 0.75rem 1rem 0.75rem 2.75rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 0.75rem;
    color: white;
    font-size: 0.9375rem;
    transition: all 0.2s;
  }

  .search-filter__input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .search-filter__input:focus,
  .search-filter__select:focus {
    outline: none;
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.4);
  }

  .search-filter__clear {
    position: absolute;
    right: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.6);
    cursor: pointer;
    padding: 0.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.25rem;
    transition: all 0.2s;
  }

  .search-filter__clear:hover {
    color: white;
    background: rgba(255, 255, 255, 0.1);
  }

  .search-filter__results {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.875rem;
  }

  .search-filter__count {
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .search-filter__search,
    .search-filter__category,
    .search-filter__sort {
      min-width: 100%;
    }
  }
</style>
