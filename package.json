{
  "name": "frostpane-monorepo",
  "version": "1.0.0",
  "description": "Frostpane monorepo containing the core library and example site",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/example",
    "build": "npm run build --workspaces --if-present",
    "build:lib": "npm run build --workspace=packages/frostpane",
    "build:example": "npm run build --workspace=packages/example",
    "preview": "npm run preview --workspace=packages/example"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "sass": "^1.93.3",
    "vite": "^7.2.2"
  }
}
