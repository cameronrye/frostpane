{
  "name": "frostpane-monorepo",
  "version": "1.1.0",
  "description": "Frostpane monorepo containing the core library and example site",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/example",
    "build": "npm run build --workspaces --if-present",
    "build:lib": "npm run build --workspace=packages/frostpane",
    "build:example": "npm run build --workspace=packages/example",
    "preview": "npm run preview --workspace=packages/example",
    "test": "npm run test --workspace=packages/frostpane",
    "test:watch": "npm run test:watch --workspace=packages/frostpane",
    "lint": "npm run lint --workspace=packages/frostpane",
    "lint:fix": "npm run lint:fix --workspace=packages/frostpane",
    "prepare": "husky",
    "version": "npm run build",
    "validate-versions": "node scripts/validate-versions.cjs",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:beta": "standard-version --prerelease beta",
    "release:alpha": "standard-version --prerelease alpha",
    "release:dry-run": "standard-version --dry-run"
  },
  "keywords": [
    "css",
    "scss",
    "sass",
    "glass",
    "frosted-glass",
    "glassmorphism",
    "ui",
    "design-system",
    "backdrop-filter",
    "blur"
  ],
  "author": "Cameron Rye <c@meron.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cameronrye/frostpane.git"
  },
  "bugs": {
    "url": "https://github.com/cameronrye/frostpane/issues"
  },
  "homepage": "https://cameronrye.github.io/frostpane",
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.6",
    "prettier": "3.6.2",
    "sass": "1.94.0",
    "standard-version": "9.5.0",
    "vite": "^7.2.2"
  }
}
